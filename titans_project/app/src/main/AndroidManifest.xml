<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Titans_project"
        tools:targetApi="31">
        <activity
            android:name=".ProfileView"
            android:exported="false" />
        <activity
            android:name=".EventDetailView"
            android:exported="false" />
        <activity
            android:name=".MyApplicationsView"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Titans_project">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Created Events View Activity -->
        <activity
            android:name=".CreatedEventsView"
            android:exported="false" />

        <!-- Create Event View Activity -->
        <activity
            android:name=".CreateEventView"
            android:exported="false" />

        <!-- Event Details View Activity -->
        <activity
            android:name=".EventDetailsView"
            android:exported="true" />

        <!-- Edit Event View Activity -->
        <activity
            android:name=".EditEventView"
            android:exported="true" />
    </application>

</manifest>