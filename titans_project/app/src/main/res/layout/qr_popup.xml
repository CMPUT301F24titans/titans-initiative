<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <!-- Background overlay for blurring the page content -->
    <View
        android:id="@+id/blurBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:visibility="gone" />

    <!-- QR Code Popup Container -->
    <LinearLayout
        android:id="@+id/qrPopupContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#FFFFFF"
        android:padding="24dp"
        android:elevation="8dp"
        android:visibility="gone"
        android:layout_gravity="center">

        <!-- QR Code Image -->
        <ImageView
            android:id="@+id/qrImageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="QR Code" />

        <!-- Event Details Text -->
        <TextView
            android:id="@+id/qrEventDetailsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Event Details will appear here"
            android:textSize="14sp"
            android:textColor="#000000"
            android:gravity="center" />

        <!-- Share Button -->
        <ImageView
            android:id="@+id/shareQrButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_share"
            android:contentDescription="Share QR Code"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="12dp"
            app:tint="@android:color/black" />

        <!-- Close Button -->
        <Button
            android:id="@+id/closeButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="16sp"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:background="?android:attr/selectableItemBackground" />
    </LinearLayout>
</FrameLayout>
